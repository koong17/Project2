<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>HOTEL</display-name>
  
  <!-- BoardController.java -->
  <servlet>
  		<servlet-name>ReserveController</servlet-name>
  		<servlet-class>hotel.tikki.reserve.controller.ReserveController</servlet-class>
  		<init-param>
  			 <param-name>ReserveConfig</param-name>
  			 <param-value>C:\Users\1027\Documents\GitHub\Project2\hotel\WebContent\WEB-INF\reservation.properties</param-value>
  		</init-param>
  </servlet>
  <servlet-mapping>
  		<servlet-name>ReserveController</servlet-name>
  		<url-pattern>*.to</url-pattern>
  </servlet-mapping>
  
  <!-- error 를 처리하는 페이지를 만들어서 처리 -->
  <error-page>
  		<error-code>404</error-code>
  		<location>/404.html</location>
  </error-page>
    
   <!-- jdbc:BoardDB DBCP Setting -->
	<resource-ref>
		<description>DBCP DB Test</description>			<!-- 설명 -->
		<res-ref-name>jdbc:HotelDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>